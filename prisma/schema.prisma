generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Test") 
}

model tratament {
  id Int @id @default(autoincrement())
  name String
  unidad String
  dosis Int 
  Type String 
  StartDate DateTime @default(now())
  EndDate DateTime @updatedAt
  @@map("tratament")
}


model consultation {
  id Int @id @default(autoincrement())
  reasonsConsultation String
  plan String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("consultation")
}

model medicalRecord {
  id Int @id @default(autoincrement())
  num String 

  @@map("medicalRecord")
}
